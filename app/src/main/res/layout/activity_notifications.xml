<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notifications.NotificationsActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple notification"
        android:textSize="30sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/buttonSimpleNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification 01"
            android:layout_margin="5dp"
            android:onClick="onClick"
            />
        <Button
            android:id="@+id/buttonSimpleNotificationCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:onClick="onClick"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notification with progress"
        android:textSize="30sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/buttonNotificationWithProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification 02"
            android:layout_margin="5dp"
            android:onClick="onClick"
            />
        <Button
            android:id="@+id/buttonNotificationWithProgressCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:onClick="onClick"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notification with button and open activity"
        android:textSize="30sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/buttonNotificationWithButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification 03"
            android:layout_margin="5dp"
            android:onClick="onClick"
            />
        <Button
            android:id="@+id/buttonNotificationWithButtonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:onClick="onClick"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom notification"
        android:textSize="30sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/buttonCustomNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification 04"
            android:layout_margin="5dp"
            android:onClick="onClick"
            />
        <Button
            android:id="@+id/buttonCustomNotificationCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:onClick="onClick"
            android:layout_margin="5dp"/>
    </LinearLayout>
</LinearLayout>